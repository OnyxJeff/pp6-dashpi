[Unit]
Description=DashPi Chromium Kiosk
After=network-online.target systemd-user-sessions.service
Wants=network-online.target

[Service]
User=dashpi
Environment=DISPLAY=:0
Environment=XDG_RUNTIME_DIR=/run/user/%U
WorkingDirectory=/usr/local/dashpi/scripts
ExecStart=/usr/bin/startx /usr/local/dashpi/scripts/kiosk.sh -- :0
Restart=on-failure
RestartSec=10
TTYPath=/dev/tty1
StandardInput=tty
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=graphical.target
